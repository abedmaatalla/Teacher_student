<!-- Modal login-->

    {% if not auth.check %} 
        <div id="loginModal" class="modal fade" role="dialog">
            <form action="{{ path_for("login") }}" method="POST">
                <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">{{ translate('translation.root.login') }}</h4>
                  </div>
                  <div class="modal-body">
                        <div class="form-group">
                            <label for="email">{{ translate('translation.root.email') }}:</label>
                            <input type="email" name="email" class="form-control" placeholder="email@example.com" required  />
                        </div>
                        <div class="form-group">
                            <label for="password">{{ translate('translation.root.password') }}:</label> <span class="pull-right" for="forget"><a href="{{path_for('forgetPassword')}}" >{{ translate('translation.root.forget') }}</a></span>
                            <input type="password" name="password" class="form-control" placeholder="*****"  required/>
                        </div>
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">{{ translate('translation.root.close') }}</button>
                        <button  class="btn btn-primary">{{ translate('translation.root.login') }}</button>
                      </div>
                    </div>
              </div>
            </form>
        </div>
    {% endif %}
    <!-- /Model login  -->