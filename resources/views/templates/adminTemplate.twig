<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>TurEdu</title>

    <!-- Bootstrap Core CSS -->
    <link href="{{ base_url() }}/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- MetisMenu CSS -->
    <link href="{{ base_url() }}/assets/vendor/metisMenu/metisMenu.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="{{ base_url() }}/assets/dist/css/sb-admin-2.css" rel="stylesheet">

    <!-- Morris Charts CSS -->
    <link href="{{ base_url() }}/assets/vendor/morrisjs/morris.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="{{ base_url() }}/assets/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>

    <div id="wrapper">

        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <img style="height: 32px;" src="{{base_url()}}/assets/img/logo.png"/>
            </div>
            <!-- /.navbar-header -->

            <ul class="nav navbar-top-links navbar-right">
                <!-- /.dropdown -->
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-user fa-fw"></i> <i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li><a href="{{path_for('adminProfile')}}"><i class="fa fa-user fa-fw"></i> {{ translate('translation.root.userProfile') }}</a>
                        </li>
                        <li class="divider"></li>
                        <li><a href="{{path_for('logOut')}}"><i class="fa fa-sign-out fa-fw"></i> {{ translate('translation.root.logout') }}</a>
                        </li>
                    </ul>
                    <!-- /.dropdown-user -->
                </li>
                <li class="page-scroll">
                    <div class="dropdown">
                        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">{{lang}}
                        <span class="caret"></span></button>
                        <ul class="dropdown-menu">
                            <li><a href="{{path_for('chooseLanguage')}}?lang=tr">Tr</a></li>
                            <li><a href="{{path_for('chooseLanguage')}}?lang=fr">Fr</a></li>
                            <li><a href="{{path_for('chooseLanguage')}}?lang=en">En</a></li>
                        </ul>
                    </div>
                </li>
                <!-- /.dropdown -->
            </ul>
            <!-- /.navbar-top-links -->

            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li>
                            <a href="{{path_for("admin")}}"><i class="fa fa-dashboard fa-fw"></i> {{ translate('translation.root.dashboard') }}</a>
                        </li>
                        <li>
                            

                            <a href="#"><i class="fa fa-sitemap fa-fw"></i>{{ translate('translation.root.categories') }}<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="{{path_for("category")}}"><i class="fa fa-list fa-fw"></i> {{ translate('translation.root.subCategories') }}</a>
                                </li>
                                <li>
                                    <a href="{{path_for("mainCategory")}}"><i class="fa fa-list fa-fw"></i> {{ translate('translation.root.categories') }}</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-sitemap fa-fw"></i>{{ translate('translation.root.students') }}<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="{{path_for('activeStudent')}}">{{ translate('translation.root.active') }}</a>
                                </li>
                                <li>
                                    <a href="{{path_for('noActiveStudent')}}">{{ translate('translation.root.notActive') }}</a>
                                </li>
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-sitemap fa-fw"></i>{{ translate('translation.root.teachers') }}<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="{{path_for('activeTeacher')}}">{{ translate('translation.root.active') }}</a>
                                </li>
                                <li>
                                    <a href="{{path_for('noActiveTeacher')}}">{{ translate('translation.root.notActive') }}</a>
                                </li>
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>
                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">{% block title %}{% endblock %}</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">

                {% if messageSuccess.messageSuccess %}
                    <div class="col-md-12 alert alert-success">
                        {{messageSuccess.messageSuccess}}
                    </div>
                {% endif %}
                {% if messageDanger.messageDanger %}
                    <div class="col-md-12 alert alert-danger">
                        {{messageDanger.messageDanger}}
                    </div>
                {% endif %}
                
                {% block container %}{% endblock %}
            </div>
        </div>
        <!-- /#page-wrapper -->
    </div>
    <!-- /#wrapper -->

    {# modal #}
    {% block modal %}{% endblock %}
    {# /modal #}

    <!-- jQuery -->
    <script src="{{ base_url() }}/assets/vendor/jquery/jquery.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="{{ base_url() }}/assets/vendor/bootstrap/js/bootstrap.min.js"></script>

    <!-- Metis Menu Plugin JavaScript -->
    <script src="{{ base_url() }}/assets/vendor/metisMenu/metisMenu.min.js"></script>

    <!-- Morris Charts JavaScript -->
    <script src="{{ base_url() }}/assets/vendor/raphael/raphael.min.js"></script>



    <!-- Custom Theme JavaScript -->
    <script src="{{ base_url() }}/assets/dist/js/sb-admin-2.js"></script>

    <script>
        $(document).ready(function(){
            $(".nav-tabs a").click(function(){
                $(this).tab('show');
            });
        });
    </script>

</body>

</html>
