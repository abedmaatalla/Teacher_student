
{% extends 'templates/adminTemplate.twig' %}
{% block title %} {{ translate('translation.root.category') }} List
<button type="button" class="btn btn-info btn-md pull-right" data-toggle="modal" data-target="#modal{{user.id}}">{{ translate('translation.root.add') }}</button>
{% endblock %}
{% block container %}
	<div class="col-lg-12">
	    <div class="panel panel-default">
	        <div class="panel-heading">
	            {{ translate('translation.root.categories') }}
	        </div>
	        <!-- /.panel-heading -->
	        <div class="panel-body">
	            <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
	                <thead>
	                    <tr>
	                    	<th>{{ translate('translation.root.category') }}</th>
	                        <th>{{ translate('translation.root.subCategory') }}</th>
	                        <th>{{ translate('translation.root.option') }}</th>
	                    </tr>
	                </thead>
	                <tbody>
                    	{% for category in categoryList %}
		                    <tr class="odd gradeX">
		                        <td>{{category.mainCategory.category}}</td>
		                        <td>{{category.category}}</td>
		                        <td>
		                        	<a 
		                        	href="{{path_for("removeCategory",{'id':category.id})}}" 
		                        	class="btn btn-danger btn-lg">{{ translate('translation.root.delete') }}</button>
		                        </td>
		                    </tr>
                        {% endfor %}
	                    </tbody>
	            </table>


	        </div>
	        <!-- /.panel-body -->
	    </div>
	    <!-- /.panel -->
	</div>
	<!-- /.col-lg-12 -->
{% endblock %}

{% block modal %}

     <!-- Modal -->
    <div id="modal" class="modal fade" role="dialog">

        
            <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">{{ translate('translation.root.category') }}</h4>
              </div>
              <div class="modal-body">


	            <ul class="nav nav-tabs">
				    <li class="active"><a href="#home">{{ translate('translation.root.subCategory') }}</a></li>
				    <li><a href="#menu1">{{ translate('translation.root.category') }}</a></li>
				  </ul>

				  <div class="tab-content">
				    <div id="home" class="tab-pane fade in active">
			    		<form action="{{ path_for("addCategory") }}" method="POST">
					      	<div class="form-group">
			                    <label for="status">{{ translate('translation.root.categories') }}:</label>
			                    <select name="code" class="form-control" >
			                    	{% for category in mainCategoryList %}
			                        	<option value="{{category.id}}">{{category.category}}</option>
			                        {% endfor %}
			                    </select>

			                    <label for="status">{{ translate('translation.root.category') }}:</label>
			                    
			                    <input class="form-control" type="text" name="category">
			                </div>
			                      
		                  	<div class="modal-footer">
			                    <button type="button" class="btn btn-default" data-dismiss="modal">{{ translate('translation.root.close') }}</button>
			                    <button  class="btn btn-primary">{{ translate('translation.root.submit') }}</button>
			                  </div>
					  	</form>
				    </div>
				    <div id="menu1" class="tab-pane fade">
				      	<form action="{{ path_for("addMainCategory") }}" method="POST">
					      	<div class="form-group">
			                    <label for="status">{{ translate('translation.root.category') }}:</label>
			                    <input class="form-control" type="text" name="category">
			                </div>
			                      
		                  	<div class="modal-footer">
			                    <button type="button" class="btn btn-default" data-dismiss="modal">{{ translate('translation.root.close') }}</button>
			                    <button  class="btn btn-primary">{{ translate('translation.root.submit') }}</button>
			                  </div>
					  	</form>
				    </div>
				    
				  </div>
				</div>
			</div>
       	</div>
    </div>
    <!-- /Model  -->

{% endblock %}
